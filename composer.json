{
    "name": "yuriysparrow/laravel-nestedset",
    "description": "Nested Set Model for Laravel 5.7 and up",
    "keywords": ["laravel", "nested sets", "nsm", "database", "hierarchy"],
    "license": "MIT",

    "authors": [
        {
            "name": "Yurii Horobets",
            "email": "yuriy.sparrow@gmail.com"
        }
    ],

    "require": {
        "php": ">=7.4",
        "illuminate/support": "~5.7.0|~5.8.0|^6.0|^7.0|>=8.0 <8.84.12",
        "illuminate/database": "~5.7.0|~5.8.0|^6.0|^7.0|>=8.0 <8.84.12",
        "illuminate/events": "~5.7.0|~5.8.0|^6.0|^7.0|>=8.0 <8.84.12"
    },

    "autoload": {
        "psr-4": {
            "Kalnoy\\Nestedset\\": "src/"
        }
    },

    "require-dev": {
        "phpunit/phpunit": ">=7.4"
    },

    "minimum-stability": "dev",
    "prefer-stable": true,

    "extra": {
        "branch-alias": {
            "dev-master": "v5.0.x-dev"
        },

        "laravel": {
            "providers": [
                "Kalnoy\\Nestedset\\NestedSetServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": [
            "@php ./vendor/bin/phpunit"
        ]
    }
}
